ethernet _first_ {
	format_up = "eth %speed"
	format_down = "eth down"
}

cpu_usage {
	format = "cpu %usage"
}

memory {
	format = "mem %used"
	threshold_degraded = "10%"
	format_degraded = "MEMORY LOW: %free"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S "
}
