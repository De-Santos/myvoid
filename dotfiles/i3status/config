order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "memory"
order += "tztime local"

volume master {
	format = "vol %volume"
	format_muted = "muted"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

