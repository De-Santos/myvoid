	color_good = "#d8a8a8"      # —Å–≤–µ—Ç–ª–æ-—Ä–æ–∑–æ–≤—ã–π
	color_bad = "#c79595"       # —Ç—ë–º–Ω–æ-—Ä–æ–∑–æ–≤—ã–π
